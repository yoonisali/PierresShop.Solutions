@{
    Layout = "_Layout";
}

@model PierresShop.Models.Flavor

<h2>Add a treat!</h2>

<h4>Add a treat to this flavor: @Html.DisplayFor(model => model.Name)</h4><br>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.FlavorId)

    @Html.LabelFor(model => model.Name, new {style = "padding-right: 15px;"})
    @Html.DropDownList("TreatId")<br><br>

    <input type="submit" value="Save" class="btn btn-dark"/>
}
