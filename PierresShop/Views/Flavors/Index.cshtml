@{
  Layout = "_Layout";
}

@using PierresShop.Models;

<h2>Flavors</h2><br>
<hr>

@if (@Model.Count == 0)
{
  <h5>No flavors have been added yet!</h5>
}
<ul>
  @foreach (Flavor flavor in Model)
  {
    <li style="list-style-position: inside; padding-right: 45px;">@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })
    </li>
  }
</ul>
<p>@Html.ActionLink("Add a new flavor!", "Create")</p>

<hr>